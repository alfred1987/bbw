{% assign link_count = section.blocks.size %}
{% if link_count > 0 %}
  <div class="container">
    <div class="columns sixteen">
      {% for block in section.blocks limit:4 %}
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}"
            class="{% if link_count == 4 %}one-fourth {% cycle 'alpha mr-1', '', 'mr-1', 'omega' %}
                    {% elsif link_count == 3 %}one-third {% cycle 'alpha mr-half', 'mr-half', 'omega' %}
                    {% elsif link_count == 2 %}half {% cycle 'alpha mr-half', 'omega' %}
                    {% else %}full alpha{% endif %} column homepage-links">
            {% if block.settings.link_title %}<div class="link-text">{{ block.settings.link_title }}</div>{% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}
{% schema %}
{
  "name": "Links",
  "class": "links",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "link_title",
          "label": "Link title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Links",
    "category": "Links",
    "blocks": [
      {
        "type": "link"
      },
      {
        "type": "link"
      }
    ]
  }]
}
{% endschema %}