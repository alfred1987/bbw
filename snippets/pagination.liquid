  <div class="section clearfix">
    <div class="paginate">
      {% if paginate.pages > 1 %}{{ paginate | default_pagination | replace: '&raquo;', '<span class="icon-right-arrow"></span>' | replace: '&laquo;', '<span class="icon-left-arrow"></span>' }}{% endif %}
      {{ 'layout.general.pagination.showing' | t }} {{ paginate.current_offset | plus: 1 }} {{ 'layout.general.pagination.to' | t }} {% if paginate.next %}{{ paginate.current_offset | plus: paginate.page_size }}{% else %}{{ paginate.items }}{% endif %} {{ 'layout.general.pagination.of' | t }}  {{ paginate.items }} ({{paginate.pages}} {{ 'layout.general.pagination.pages' | t }})
    </div>
  </div>
</div>